# quit,reload bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close,kill window
super + {_,shift + } w
	bspc node -{c,k}

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd

# toggle monocle mode
super + m
	bspc desktop -l next

# change node type
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# toggle flags for focused node
super + ctrl + {m,l,s,p}
	bspc node -g {marked,locked,sticky,private}

# select,shift nodes
super + {_,shift + } {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# cycle through nodes
super + {_,shift + } c
	bspc node -f {next,prev}.local.!hidden.window

# move through desktops
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# jump to selected desktop
super + {_,shift + } {1-9,0}
	bspc {desktop -f, node -d} '^{1-9,10}'

# create preselection on focused node
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# set preselection ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancle preselection on focused node
super + ctrl + space
	bspc node -p cancel


##
# User Specific config
##

super + {_,shift + } Return
	{alacritty, xterm}

super + {_,shift + } z
	{rofi -show combi,dmenu_run}

super + @space
	keepassxc

alt + t
	thunar

# hide,unhide nodes (stacking)
alt + {_,shift + } x
	/home/wraith/.config/sxhkd/hide-toggle.py {--hide,--unhide}

# toggle borders
super + {_,alt + } b
	bspc config border_width {2,0}

XF86MonBrightnessUp
	light -A 5

XF86MonBrightnessDown
	light -U 5

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -1000
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +1000
XF86AudioMute
	pactl set-sink-mut @DEFAULT_SINK@ toggle


	
